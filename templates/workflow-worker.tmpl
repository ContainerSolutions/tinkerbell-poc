version: '0.1'
name: rpi-k8s-worker-provisioning
global_timeout: 6000
tasks:
- name: "k8s-installation"
  worker: "{{.device_1}}"
  environment:
    HEGEL_URL: ${TINKERBELL_HOST_IP}
    NODE_IP: "{{.device_1}}"
  volumes:
    - /dev:/dev
  actions:
  - name: "disk-wipe"
    image: wipe
    timeout: 90
  - name: "os-install"
    image: install-os
    timeout: 800
    environment:
       OS_URL: ${OS}
  - name: "os-configure"
    image: configure-os
    timeout: 120
    environment:
       WIFI_SSID: ${SSID}
       WIFI_PSK: ${PSK}
       WIFI_COUNTRY: ${COUNTRY}
  - name: "install-k8s"
    image: install-k8s
    timeout: 600
    environment:
       K8S_CLUSTER_SECRET: ${SECRET}
       K3S_URL: ${K3S}
  - name: "reboot"
    image: reboot
    timeout: 120
    environment:
       REGISTRY: ${TINKERBELL_HOST_IP}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /etc/docker:/etc/docker
      - /root:/root